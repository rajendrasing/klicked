<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent">

        <View
            android:id="@id/view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/white" />


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginStart="-5dp"
            android:layout_below="@id/view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#52707070" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/global__primary"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/txt_dis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/global__primary"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:textColor="@color/text_tittle"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Months"
                android:textColor="@color/text_tittle"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/text_tittle"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/txt_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/know_more"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/global__primary"
                android:fontFamily="@font/poppins"/>

        </LinearLayout>

    </RelativeLayout>
</layout>