<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_border"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="05dp"
            android:layout_marginTop="05dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#EBEAEC"
            app:cardCornerRadius="08dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/pro_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/watch" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="05dp"
            android:layout_toEndOf="@id/card"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:text="Odyssey Analog Blue"
            android:textColor="#000000"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="05dp"
            android:layout_toEndOf="@id/card"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:text="2500PT"
            android:textColor="#0ec40d"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="05dp"
            android:layout_toEndOf="@id/card"
            android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
            android:drawablePadding="5dp"
            android:drawableTint="#91A8A8A8"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center|start"
            android:singleLine="true"
            android:text="12-02-22"
            android:textColor="#91A8A8A8"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="05dp"
            android:layout_toEndOf="@id/txt_date"
            android:drawableLeft="@drawable/ic_icon_feather_box"
            android:drawablePadding="5dp"
            android:drawableTint="#91A8A8A8"
            android:fontFamily="@font/poppins"
            android:gravity="center|start"
            android:singleLine="true"
            android:text="Delivered"
            android:textColor="#91A8A8A8"
            android:textSize="12dp" />


    </RelativeLayout>

</layout>