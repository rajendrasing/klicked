<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Today"
            android:textColor="#802B2B2B"
            android:textSize="15dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/receiver_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="05dp"
            android:background="@drawable/corner_round_background"
            android:backgroundTint="#ebeef2"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/receiver_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing el"
                android:textColor="@color/text_tittle"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/receiver_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="end|center"
                android:text="14:40 pm"
                android:textColor="#4D2B2B2B"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sender_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="80dp"
            android:layout_marginTop="05dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corner_roundgrident_background"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/sender_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center|start"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing el"
                android:textColor="@color/white"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:drawableRight="@drawable/ic_icon_offline"
                android:drawablePadding="10dp"
                android:layout_gravity="end"
                android:gravity="end|center"
                android:text="14:40 pm"
                android:textColor="#99FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</layout>