<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_color_border"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tell Us Why You Want To\nDeactivate  Your Account ?"
        android:textColor="@color/global__primary"
        android:textSize="20dp" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:buttonTint="#fab665"
            android:fontFamily="@font/poppins"
            android:layoutDirection="ltr"
            android:paddingStart="10dp"
            android:text="This is temporary. I'll be back"
            android:checked="true"
            android:textColor="#B3242424"
            android:textSize="13sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:buttonTint="#fab665"
            android:fontFamily="@font/poppins"
            android:layoutDirection="ltr"
            android:paddingStart="10dp"
            android:text="I don't feel safe on Klicked"
            android:textColor="#B3242424"
            android:textSize="13sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:buttonTint="#fab665"
            android:fontFamily="@font/poppins"
            android:layoutDirection="ltr"
            android:paddingStart="10dp"
            android:text="I don't find Klicked Useful"
            android:textColor="#B3242424"
            android:textSize="13sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:buttonTint="#fab665"
            android:fontFamily="@font/poppins"
            android:layoutDirection="ltr"
            android:paddingStart="10dp"
            android:text="I don't understand how to use\nKlicked"
            android:textColor="#B3242424"
            android:textSize="13sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio_Other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:buttonTint="#fab665"
            android:fontFamily="@font/poppins"
            android:layoutDirection="ltr"
            android:paddingStart="10dp"
            android:text="Other"
            android:textColor="#B3242424"
            android:textSize="15sp"
            android:textStyle="normal" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#d8d8d8"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Cancel"
            android:fontFamily="@font/poppins"
            android:textSize="14dp"
            android:textColor="#B3242424"/>
        <TextView
            android:id="@+id/txt_report"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Delete Account"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18dp"
            android:textColor="@color/global__primary"/>
    </LinearLayout>
</LinearLayout>